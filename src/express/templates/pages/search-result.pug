extends ../layouts/base.pug

block content
  main.page-content
    section.search-results
      h1.visually-hidden Результаты поиска
      .search-results__wrapper
        p.search-results__label
          | Найдено
          span.js-results  #{total} публикации
        ul.search-results__list
          each offer, index in offers
            - var label = offer.type === 'offer' ? 'Продам' : 'Куплю';
            - var color = index > 9 ? index + 1 : '0' + (index + 1);
            li.search-results__item
              div(class='ticket-card ticket-card--color' + color)
                .ticket-card__img
                  img(src=offer.picture, alt='Изображение товара')
                .ticket-card__info
                  span.ticket-card__label #{label}
                  .ticket-card__categories
                    each category in offer.categories
                      a(href='#') #{category}
                  .ticket-card__header
                    h3.ticket-card__title
                      a(href='#') #{offer.title}
                    p.ticket-card__price
                      span.js-sum #{offer.sum}
                      |  ₽
                  .ticket-card__desc
                    p #{offer.description}
    section.tickets-list
      h2.visually-hidden Самые новые предложения
      .tickets-list__wrapper
        .tickets-list__header
          p.tickets-list__title Самое свежее
          a.tickets-list__link(href='#') Еще 25
        ul
          each offer, index in recentlyOffers
            - var label = offer.type === 'offer' ? 'Продам' : 'Куплю';
            - var color = index > 9 ? index + 1 : '0' + (index + 1);
            li.tickets-list__item
              div(class='ticket-card ticket-card--color' + color)
                .ticket-card__img
                  img(src=offer.picture, alt='Изображение товара')
                .ticket-card__info
                  span.ticket-card__label #{label}
                  .ticket-card__categories
                    each category in offer.categories
                      a(href='#') #{category}
                  .ticket-card__header
                    h3.ticket-card__title
                      a(href='#') #{offer.title}
                    p.ticket-card__price
                      span.js-sum #{offer.sum}
                      |  ₽
                  .ticket-card__desc
                    p #{offer.description}

